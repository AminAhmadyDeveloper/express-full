{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@models/*": [
                "./models/*"
            ],
            "@controllers/*": [
                "./controllers/*"
            ],
            "@routes/*": [
                "./routes/*"
            ],
            "@interfaces/*": [
                "./interfaces/*"
            ],
            "@type/*": [
                "./types/*"
            ],
            "@jobs/*": [
                "./jobs/*"
            ],
            "@views/*": [
                "./views/*"
            ],
            "@utils/*": [
                "./utils/*"
            ]
        },
        "allowJs": true,
        "jsx": "preserve"
    }
}